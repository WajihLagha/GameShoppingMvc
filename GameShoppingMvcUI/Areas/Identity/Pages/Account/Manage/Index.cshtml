@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - EGameStore</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/auth-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="auth-page">
        <div class="auth-card" style="max-width: 600px;">
            <!-- Logo Section -->
            <div class="auth-logo">
                <h1><i class="bi bi-person-circle"></i> My Profile</h1>
                <p>Manage your account information</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <!-- Profile Form -->
            <form id="profile-form" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors" role="alert"></div>
                
                <!-- Username Input (Disabled) -->
                <div class="form-floating-modern">
                    <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>

                <!-- Phone Number Input -->
                <div class="form-floating-modern">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number"/>
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button id="update-profile-button" type="submit" class="auth-submit-btn">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>

                <!-- Additional Management Links -->
                <div class="auth-links">
                    <a asp-page="./Email">
                        <i class="bi bi-envelope"></i> Change Email
                    </a>
                    <a asp-page="./ChangePassword">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                    <a asp-page="./TwoFactorAuthentication">
                        <i class="bi bi-shield-check"></i> Two-Factor Authentication
                    </a>
                    <a asp-page="./PersonalData">
                        <i class="bi bi-file-person"></i> Personal Data
                    </a>
                </div>

                <!-- Back Link -->
                <div class="auth-bottom-link">
                    <p><a href="/Home/Index"><i class="bi bi-arrow-left"></i> Back to Home</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
