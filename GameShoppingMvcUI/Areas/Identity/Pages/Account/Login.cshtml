@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - EGameStore</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/auth-styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="auth-page">
        <div class="auth-card">
            <!-- Logo Section -->
            <div class="auth-logo">
                <!-- Logo placeholder - will be replaced with actual logo -->
                <h1>EGameStore</h1>
                <p>Welcome back! Please login to your account</p>
            </div>

            <!-- Login Form -->
            <form id="account" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors" role="alert"></div>
                
                <!-- Email Input -->
                <div class="form-floating-modern">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-floating-modern">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="auth-checkbox">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Submit Button -->
                <button id="login-submit" type="submit" class="auth-submit-btn">
                    Log In
                </button>

                <!-- Additional Links -->
                <div class="auth-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </div>

                <!-- Register Link -->
                <div class="auth-bottom-link">
                    <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up here</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
