@model Game

@{
    ViewData["Title"] = "Edit Game";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />
<link rel="stylesheet" href="~/css/admin-modern.css" />

<div class="admin-container">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-pencil-square"></i>
                Edit Game
            </h1>
            <p class="admin-subtitle">Update game information</p>
        </div>
        <a asp-action="Index" class="btn-admin-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="form-card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert-modern alert-danger"></div>
            
            <div class="form-row">
                <div class="form-group full-width">
                    <label asp-for="GameName" class="form-label-modern">
                        <i class="bi bi-controller"></i> Game Name
                    </label>
                    <input asp-for="GameName" class="form-input-modern" placeholder="Enter game name" />
                    <span asp-validation-for="GameName" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="GenreId" class="form-label-modern">
                        <i class="bi bi-tag"></i> Genre
                    </label>
                    <select asp-for="GenreId" class="form-select-modern" asp-items="ViewBag.Genres">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="GenreId" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher" class="form-label-modern">
                        <i class="bi bi-building"></i> Publisher
                    </label>
                    <input asp-for="Publisher" class="form-input-modern" placeholder="Enter publisher name" />
                    <span asp-validation-for="Publisher" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Price" class="form-label-modern">
                        <i class="bi bi-currency-dollar"></i> Price
                    </label>
                    <input asp-for="Price" class="form-input-modern" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Price" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="YearOut" class="form-label-modern">
                        <i class="bi bi-calendar"></i> Year Released
                    </label>
                    <input asp-for="YearOut" class="form-input-modern" type="number" placeholder="2024" />
                    <span asp-validation-for="YearOut" class="validation-message"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group" style="flex: 2;">
                    <label asp-for="Image" class="form-label-modern">
                        <i class="bi bi-image"></i> Image URL
                    </label>
                    <input asp-for="Image" class="form-input-modern" id="imageUrlInput" placeholder="https://example.com/image.jpg" oninput="updateImagePreview(this.value)" />
                    <span asp-validation-for="Image" class="validation-message"></span>
                    <small class="form-hint">Enter the full URL of the game cover image</small>
                </div>
                <div class="form-group" style="flex: 1; align-items: center; justify-content: center;">
                    <div class="image-preview-container">
                        <div class="image-preview-box">
                             <img id="imagePreview" src="@(string.IsNullOrEmpty(Model.Image) ? "/images/noImage.jpg" : Model.Image)" alt="Preview" onerror="this.src='/images/noImage.jpg'" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="quantity" class="form-label-modern">
                        <i class="bi bi-box-seam"></i> Stock Quantity
                    </label>
                    <input type="number" id="quantity" name="quantity" class="form-input-modern" value="@Model.Quantity" min="0" placeholder="0" />
                    <small class="form-hint">Update the stock quantity for this game</small>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-admin-primary">
                    <i class="bi bi-check-circle"></i> Update Game
                </button>
                <a asp-action="Index" class="btn-admin-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateImagePreview(url) {
            const preview = document.getElementById('imagePreview');
            if (url) {
                preview.src = url;
            } else {
                preview.src = '/images/noImage.jpg';
            }
        }
    </script>
}
