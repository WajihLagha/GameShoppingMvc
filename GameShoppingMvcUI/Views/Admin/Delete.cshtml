@model Game

@{
    ViewData["Title"] = "Delete Game";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />
<link rel="stylesheet" href="~/css/admin-modern.css" />

<div class="admin-container">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-trash"></i>
                Delete Game
            </h1>
            <p class="admin-subtitle">Confirm game deletion</p>
        </div>
        <a asp-action="Index" class="btn-admin-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert-modern alert-warning">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <span>Are you sure you want to delete this game? This action cannot be undone.</span>
    </div>

    <div class="delete-preview-card">
        <div class="preview-header">
            <div class="preview-image">
                @if (string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/images/noImage.jpg" alt="No Image" />
                }
                else
                {
                    <img src="@Model.Image" alt="@Model.GameName" />
                }
            </div>
            <div class="preview-title-section">
                <h2 class="preview-game-title">@Model.GameName</h2>
                <div class="preview-price">$@Model.Price</div>
            </div>
        </div>

        <div class="preview-details">
            <div class="detail-row">
                <div class="detail-item">
                    <i class="bi bi-tag-fill detail-icon icon-genre"></i>
                    <div>
                        <span class="detail-label">Genre</span>
                        <span class="detail-value">@(Model.Genre?.GenreName ?? "N/A")</span>
                    </div>
                </div>

                <div class="detail-item">
                    <i class="bi bi-building detail-icon icon-publisher"></i>
                    <div>
                        <span class="detail-label">Publisher</span>
                        <span class="detail-value">@Model.Publisher</span>
                    </div>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-item">
                    <i class="bi bi-calendar-event detail-icon icon-year"></i>
                    <div>
                        <span class="detail-label">Year Released</span>
                        <span class="detail-value">@Model.YearOut</span>
                    </div>
                </div>

                <div class="detail-item">
                    <i class="bi bi-box-seam detail-icon icon-stock"></i>
                    <div>
                        <span class="detail-label">Stock Status</span>
                        @if (Model.Quantity.HasValue && Model.Quantity.Value > 0)
                        {
                            <span class="stock-badge stock-in">
                                <i class="bi bi-check-circle"></i> @Model.Quantity units in stock
                            </span>
                        }
                        else
                        {
                            <span class="stock-badge stock-out">
                                <i class="bi bi-x-circle"></i> Out of Stock
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions delete-actions">
                <button type="submit" class="btn-admin-danger">
                    <i class="bi bi-trash-fill"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn-admin-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
