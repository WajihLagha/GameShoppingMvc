@model Game

@{
    ViewData["Title"] = "Delete Game";
}

<div class="container my-4">
    <h2>Delete Game</h2>
    <hr />

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this game?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Game Name:</dt>
                <dd class="col-sm-9">@Model.GameName</dd>

                <dt class="col-sm-3">Genre:</dt>
                <dd class="col-sm-9">@Model.Genre?.GenreName</dd>

                <dt class="col-sm-3">Publisher:</dt>
                <dd class="col-sm-9">@Model.Publisher</dd>

                <dt class="col-sm-3">Year Released:</dt>
                <dd class="col-sm-9">@Model.YearOut</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">$@Model.Price</dd>

                <dt class="col-sm-3">Stock:</dt>
                <dd class="col-sm-9">
                    @if (Model.Quantity.HasValue && Model.Quantity.Value > 0)
                    {
                        <span class="badge bg-success">@Model.Quantity units</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of Stock</span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <dt class="col-sm-3">Image:</dt>
                    <dd class="col-sm-9">
                        <img src="@Model.Image" alt="@Model.GameName" style="max-width: 200px; height: auto;" class="img-thumbnail" />
                    </dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
