@model IEnumerable<Game>

@{
    ViewData["Title"] = "Manage Games";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Game Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Game
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Game Name</th>
                    <th>Genre</th>
                    <th>Publisher</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>
                            @if (string.IsNullOrEmpty(game.Image))
                            {
                                <img src="~/images/noImage.jpg" alt="No Image" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="@game.Image" alt="@game.GameName" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                        </td>
                        <td>@game.GameName</td>
                        <td>@game.GenreName</td>
                        <td>@game.Publisher</td>
                        <td>@game.YearOut</td>
                        <td>$@game.Price</td>
                        <td>
                            @if (game.Quantity.HasValue)
                            {
                                if (game.Quantity.Value > 0)
                                {
                                    <span class="badge bg-success">@game.Quantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">N/A</span>
                            }
                        </td>
                        <td>
                            @if (game.UpdatedDate.HasValue)
                            {
                                @game.UpdatedDate.Value.ToString("MMM dd, yyyy")
                            }
                            else
                            {
                                <text>N/A</text>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
