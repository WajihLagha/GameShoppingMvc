@model IEnumerable<Game>

@{
    ViewData["Title"] = "Manage Games";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />
<link rel="stylesheet" href="~/css/admin-modern.css" />

<div class="admin-container">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">
                <i class="bi bi-controller"></i>
                Game Management
            </h1>
            <p class="admin-subtitle">Manage your game inventory and catalog</p>
        </div>
        <a asp-action="Create" class="btn-admin-primary">
            <i class="bi bi-plus-circle"></i> Create New Game
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-modern alert-success">
            <i class="bi bi-check-circle-fill"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <div class="games-grid">
        @foreach (var game in Model)
        {
            <div class="admin-game-card">
                <div class="admin-game-image">
                    @if (string.IsNullOrEmpty(game.Image))
                    {
                        <img src="~/images/noImage.jpg" alt="No Image" />
                    }
                    else
                    {
                        <img src="@game.Image" alt="@game.GameName" />
                    }
                    <div class="image-overlay">
                        <div class="overlay-actions">
                            <a asp-action="Edit" asp-route-id="@game.Id" class="btn-overlay" title="Edit">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@game.Id" class="btn-overlay btn-overlay-danger" title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="admin-game-content">
                    <h3 class="admin-game-title">@game.GameName</h3>
                    
                    <div class="admin-game-meta">
                        <div class="meta-item">
                            <i class="bi bi-controller meta-icon icon-genre"></i>
                            <div>
                                <span class="meta-label">Genre</span>
                                <span class="meta-value">@game.GenreName</span>
                            </div>
                        </div>
                        
                        <div class="meta-item">
                            <i class="bi bi-building meta-icon icon-publisher"></i>
                            <div>
                                <span class="meta-label">Publisher</span>
                                <span class="meta-value">@game.Publisher</span>
                            </div>
                        </div>
                        
                        <div class="meta-item">
                            <i class="bi bi-calendar meta-icon icon-year"></i>
                            <div>
                                <span class="meta-label">Year</span>
                                <span class="meta-value">@game.YearOut</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="admin-game-footer">
                        <div class="price-tag">
                            <i class="bi bi-tag-fill"></i>
                            $@game.Price
                        </div>
                        
                        <div class="stock-info">
                            @if (game.Quantity.HasValue)
                            {
                                if (game.Quantity.Value > 0)
                                {
                                    <span class="stock-badge stock-in">
                                        <i class="bi bi-box-seam"></i> @game.Quantity in stock
                                    </span>
                                }
                                else
                                {
                                    <span class="stock-badge stock-out">
                                        <i class="bi bi-exclamation-triangle"></i> Out of Stock
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="stock-badge stock-na">
                                    <i class="bi bi-dash-circle"></i> N/A
                                </span>
                            }
                        </div>
                    </div>
                    
                    @if (game.UpdatedDate.HasValue)
                    {
                        <div class="update-badge">
                            <i class="bi bi-clock-history"></i>
                            @{
                                var timeAgo = DateTime.Now - game.UpdatedDate.Value;
                                if (timeAgo.TotalMinutes < 1)
                                {
                                    <text>Updated just now</text>
                                }
                                else if (timeAgo.TotalHours < 1)
                                {
                                    <text>Updated @((int)timeAgo.TotalMinutes) min@(timeAgo.TotalMinutes >= 2 ? "s" : "") ago</text>
                                }
                                else if (timeAgo.TotalDays < 1)
                                {
                                    <text>Updated @((int)timeAgo.TotalHours) hour@(timeAgo.TotalHours >= 2 ? "s" : "") ago</text>
                                }
                                else if (timeAgo.TotalDays < 7)
                                {
                                    <text>Updated @((int)timeAgo.TotalDays) day@(timeAgo.TotalDays >= 2 ? "s" : "") ago</text>
                                }
                                else
                                {
                                    <text>Updated @game.UpdatedDate.Value.ToString("MMM dd, yyyy")</text>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>No Games Yet</h3>
            <p>Start by creating your first game in the catalog</p>
            <a asp-action="Create" class="btn-admin-primary">
                <i class="bi bi-plus-circle"></i> Create First Game
            </a>
        </div>
    }
</div>
