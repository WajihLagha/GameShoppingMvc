@model Pack
@{
    ViewData["Title"] = "Delete Pack";
}

<link rel="stylesheet" href="~/css/admin-modern.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="admin-form-card" style="text-align: center;">
                <div style="font-size: 4rem; color: #f56565; margin-bottom: 1.5rem;">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                
                <h2 style="color: #2d3748; margin-bottom: 1rem;">Delete Pack?</h2>
                <p style="color: #718096; margin-bottom: 2rem;">
                    Are you sure you want to delete this pack? This action cannot be undone.
                </p>

                <!-- Pack Details -->
                <div style="background: #f7fafc; border-radius: 12px; padding: 1.5rem; margin-bottom: 2rem; text-align: left; border: 2px solid #e2e8f0;">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div style="margin-bottom: 1rem; text-align: center;">
                            <img src="@Model.Image" alt="@Model.PackName" style="max-width: 100%; max-height: 200px; border-radius: 8px; object-fit: cover;" />
                        </div>
                    }
                    
                    <div style="display: grid; gap: 0.75rem;">
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #718096; font-weight: 600;">Pack Name:</span>
                            <span style="color: #2d3748; font-weight: 700;">@Model.PackName</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div>
                                <span style="color: #718096; font-weight: 600;">Description:</span>
                                <p style="color: #2d3748; margin-top: 0.5rem; margin-bottom: 0;">@Model.Description</p>
                            </div>
                        }
                        
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #718096; font-weight: 600;">Price:</span>
                            <span style="color: #667eea; font-weight: 700; font-size: 1.25rem;">@Model.Price.ToString("C")</span>
                        </div>
                        
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #718096; font-weight: 600;">Games in Pack:</span>
                            <span style="color: #2d3748; font-weight: 700;">@(Model.PackGames?.Count ?? 0)</span>
                        </div>
                        
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #718096; font-weight: 600;">Status:</span>
                            @if (Model.IsActive)
                            {
                                <span class="admin-badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="admin-badge badge-danger">Inactive</span>
                            }
                        </div>
                    </div>

                    @if (Model.PackGames != null && Model.PackGames.Any())
                    {
                        <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e2e8f0;">
                            <span style="color: #718096; font-weight: 600; display: block; margin-bottom: 0.5rem;">Included Games:</span>
                            <ul style="margin: 0; padding-left: 1.5rem; color: #2d3748;">
                                @foreach (var packGame in Model.PackGames)
                                {
                                    <li>@packGame.Game?.GameName</li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                <!-- Action Buttons -->
                <form asp-action="DeleteConfirmed" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="admin-form-actions">
                        <button type="submit" class="btn-admin-delete" style="flex: 1;">
                            <i class="bi bi-trash"></i> Yes, Delete Pack
                        </button>
                        <a asp-action="Index" class="btn-admin-secondary" style="flex: 1;">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
